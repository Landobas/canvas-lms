{
  "name": "Canvas LMS (Codespaces)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "rebornix.Ruby",
        "Shopify.ruby-lsp",
        "eamodio.gitlens"
      ]
    }
  },
  "postCreateCommand": "docker version && docker compose version || true"
}
